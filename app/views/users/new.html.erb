<h1>Sign Up</h1>

<%= form_for @user, :url => users_path do |f| %>
  <%= render "shared/form_errors", :object => @user %>
  <fieldset>
		<div class="control-group">
		  <%= f.label :email, :class => 'control-label' %>
		  <div class="controls">
		    <%= f.text_field :email, :class => 'text_field' %>
		  </div>
		</div>

		<div class="control-group">
		  <%= f.label :name, :class => 'control-label' %>
		  <div class="controls">
		    <%= f.text_field :full_name, :class => 'text_field' %>
		  </div>
		</div>

	  <div class="control-group">
	    <%= f.label :password %>
	    <div class="controls"><%= f.password_field :password %></div>
	  </div>

	  <div class="control-group">
	    <%= f.label :password_confirmation %>
	    <div class="controls"><%= f.password_field :password_confirmation %></div>
	  </div>

    <%= f.submit "Sign Up", :class => 'btn btn-primary' %>
  </fieldset>
<% end %>

<p>Already signed up? <%= link_to "Sign in here.", :signin %></p>